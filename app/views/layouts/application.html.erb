<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>ながのCAKE</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
                <li><%= link_to "商品一覧", admins_items_path, class:"fas fa-home nav-link text-light" %></li>
                <li><%= link_to "会員一覧", admins_customers_path, class:"fas fa-home nav-link text-light" %></li>
                <li><%= link_to "注文履歴", admins_orders_path, class:"fas fa-home nav-link text-light"%></li>
                <li><%= link_to "ジャンル一覧", admins_genres_path, class:"fas fa-home nav-link text-light"%></li>
                <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"fas fa-home nav-link text-light" %></li>
              <% elsif customer_signed_in? %>
                <li><%= link_to "マイページ", public_customers_path, class:"fas fa-home nav-link text-light" %></li>
                <li><%= link_to "商品一覧", public_items_path, class:"fas fa-link nav-link text-light" %></li>
                <li><%= link_to "カート", public_cart_items_path, class:"fas fa-user-plus nav-link text-light" %></li>
                <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"fas fa-sign-in-alt nav-link text-light" %></li>
              <% else %>
                <li><%= link_to "About", home_about_path, class:"fas fa-home nav-link text-light" %></li>
                <li><%= link_to "商品一覧", public_items_path, class:"fas fa-link nav-link text-light" %></li>
                <li><%= link_to "新規登録", new_customer_registration_path, class:"fas fa-user-plus nav-link text-light" %></li>
                <li><%= link_to "ログイン", new_customer_session_path, class:"fas fa-sign-in-alt nav-link text-light" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
