<table class="table table-hover">
  <thead>
    <tr>
      <th>購入者</th>
      <th>購入日</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.customer.front_name %>
          <%= order.customer.back_name %>
        </td>
        <td>
          <%= link_to admins_order_path(order) do %>
            <%= order.created_at.strftime("%y年/%m月/%d日 %H:%M:%S") %>
          <% end %>
        </td>
        <td><%= order.order_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>