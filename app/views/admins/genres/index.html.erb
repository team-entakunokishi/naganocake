<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
 <%= f.label :name, "ジャンル名" %>
 <%= f.text_field :name  %>
 <%= f.submit '新規登録' %>
<% end %>

<table>
  <tr>
    <th>ジャンル</th>
    <th></th>
  </tr>
  <% @genres.each do |genres| %>
  <tr>
    <td><%= genres.name %></td>
    <td><link_to '編集する', edit_admins_genre_path(genres),class %></td>
  </tr>
  <% end %>

</table>
