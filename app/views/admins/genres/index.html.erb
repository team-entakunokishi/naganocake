<h4> class-"bg-light">ジャンル一覧・追加</h4>

<%= form_with model: @genre, url: admins_genre path, local:true do |f| %>
 <%= f.label :name, "ジャンル名" %>
 <%= f.text_field :name  %>
 <%= submit '新規登録', class: "btn btn-success" %>
<% end %>

<table>
  <tr>
    <th>ジャンル</th>
    <th></th>
  </tr>
  <% @genres.each do |genres| %>
  <tr>
    <td><%= genres.name %></td>
    <td><link_to '編集する', edit_admins_genre_path(genres),class: "btn btn-success" %></td>
  </tr>
  <% end %>

</table>
