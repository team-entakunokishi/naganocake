<h4>商品一覧</h4>

<%= link_to "新商品追加", new_admins_item_path %>

　<table class="table table-hover text center">
　  <thead>
　    <th>商品ID</th>
　    <th>商品名</th>
　    <th>税抜き価格</th>
　    <th>ジャンル</th>
　  </thead>
　  <tbody>
　    <% @items.each do |item| %>
　    <tr>
　      <td><%= item.id %></td>
　      <td><%= link_to item.name, admins_item_path(item) %></td>
　      <td><%= item.price %></td>
　      <td><%= item.genre.name %></td>
　    </tr>
　    <% end %>
　  </tbody>
　</table>
