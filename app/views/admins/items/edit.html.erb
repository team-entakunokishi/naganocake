<h2>商品の編集</h2>
 <%=form_with model: @item, url: admins_item_path, local:true do |f| %>
 <table>

   <tr>
     <td><%= f.label :image, "商品画像" %></td>
     <td><%= f.attachment_field :image %></td>
   </tr>
   <tr>
     <td><%= f.label :name, "商品名" %></td>
     <td><%= f.text_field :name %></td>
   </tr>
   <tr>
     <td><%= f.label :example, "商品説明" %></td>
     <td><%= f.text_area :example %></td>
   </tr>
   <tr>
    <td><%= f.label :genre, "ジャンル" %></td>
    <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %> </td>
   </tr>
   <tr>
    <td><%= f.label :price, "税抜き価格" %> </td>
    <td><%= f.text_field :price %>円</td>
   </tr>
   <tr>
    <td>
     <%= f.label :is_sell_status, "販売ステータス" %>
     <%= f.radio_button :is_sell_status, true %>
     <%= f.label :is_sell_status, "販売中",value: true %>
     <%= f.radio_button :is_sell_status, false %>
     <%= f.label :is_sell_status, "販売中止",value: :false %>

    </td>
   </tr>
   <td><%= f.submit "変更の保存" %></td>
   </tr>

 </table>
<% end %>