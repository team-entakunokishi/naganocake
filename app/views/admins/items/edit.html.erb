<h4>商品の編集</h4>

 <%form_with model: @item, url: admins_item_path, local:true do |f| %>
 <table>
   <tr>
     <th><%= f.label :image, "商品画像" %></th>
     <td><%= f.attachment_field :image %></td>
   </tr>
   <tr>
     <th><%= f.label :name, "商品名" %></th>
     <td><%= f.text_field :name %></td>
   </tr>
   <tr>
     <th><%= f.label :introduction, "商品説明" %></th>
     <td><%= f.text_area :introduction %></td>
   </tr>
   <tr>
    <th><%= f.label :genre, "ジャンル" %></th>
    <td><%= f.collection_select(:genre_id @genres, :id, :name) %> </td>
   </tr>
   <tr>
    <th><%= f.label :price, "税込み価格" %> </th>
    <td><%= f.text field:price %>円</td>
   </tr>
 </table>
 <%= f.submit "変更の保存",  %>