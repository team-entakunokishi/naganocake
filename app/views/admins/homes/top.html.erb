<h4>注文履歴一覧</h4>
 <tr>
  <th>購入日時</th>
  <th>購入者</th>
  <th>注文個数</th>
 </tr>
 <tbody>
  <% @orders.each do |order| %>
   <tr>
    <td>
     <%= link_to admins_orders_path(order.id) do %>
      <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
     <% end %>
    </td>
    <td><%= order.customer.front_name %> <%= order.customer.back_name %></td>
    <td>
     <% order.order_details.each do |order_detail| %>
      <%= order_detail.item.name %>
      <%= order_detail.amount %>
      <% end %>
    </td>
   </tr>
 </tbody>
   <% end %>