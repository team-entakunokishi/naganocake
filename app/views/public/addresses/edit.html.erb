<div class= "container">
     <div class="row">
         <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <div class="address_update">
                <h2>配送先編集</h2>
                <% if @address.errors.any? %>
                  <div class="error">
                    <%= @address.errors.count %>errors prohibited this address from being saved:
                    <ul>
                      <% @address.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <%= form_with model: @address, url: public_address_path(@address), local: true do |f| %>
                <label for="shippingcode">郵便番号</label>
                <%= f.text_field :shipping_code, class:"form-control" %><br>
                <label for="shippingaddress">住所</label>
                <%= f.text_field :shipping_address, class:"form-control" %><br>
                <label for="postaname" >宛名</label>
                <%= f.text_field :post_name, class:"form-control" %><br>

                <%= f.submit "変更内容を保存" %>
            </div>
                <% end %>
         </div>
     </div>
</div>