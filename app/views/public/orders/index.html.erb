<div class="container my-5">

  <div class="row">
    <div class="offset-1 text-center">
      <h3 class="text title-text">
        Order history List...
      </h3>
    </div>
  </div>

  <div class="row mt-5">
    <table class="table table-bordered table-hover">

      <thead class="table-active text">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr class="light-text">
          <td><%= order.created_at.strftime('%Y年/%m月/%d日') %></td>
          <td>
              〒<%= order.shipping_code %><br>
              <%= order.shipping_address %><br>
              <%= order.post_name %> 様
          </td>
          <td>
            <% order.item_orders.each do |f| %>
              <%= f.item.name %><br>
            <% end %>
          </td>
          <td><%= order.total_amount %></td>
          <td><%= order.order_status %></td>
          <td>
            <%= link_to "Show", public_order_path(order), class: "btn btn-success col-10" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pagination"><%= paginate @orders, theme: 'twitter-bootstrap-4' %></div>
  </div>
</div>