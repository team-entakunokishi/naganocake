<div class= "container">
     <div class="row">
         <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
             <div class="customer_info_update" >
                <h2>会員情報編集</h2>
                <% if @customer.errors.any? %>
                  <div class="error">
                    <%= @customer.errors.count %>errors prohibited this address from being saved:
                    <ul>
                      <% @customer.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <%= form_with model: @customer, url: public_customers_path, local: true do |f| %>
                <div class="form_group">
                    <label for="frontname">氏名</label>
                    <%= f.text_field :front_name, class:"form-control" %>
                    <label for="backname"></label>
                    <%= f.text_field :back_name, class:"form-control" %><br>
                </div>
                <div class="form_group">
                    <label for="firstname">フリガナ</label>
                    <%= f.text_field :first_name, class:"form-control" %>
                    <label for="lastname"></label>
                    <%= f.text_field :last_name, class:"form-control" %>
                </div>
                <div class="form_group">
                    <label for="postcode">郵便番号</label>
                    <%= f.text_field :post_code, class:"form-control" %><br>
                </div>
                <div class="form_group">
                    <label for="telnumber">電話番号</label>
                    <%= f.text_field :tel_number, class:"form-control" %><br>
                </div>
                <div class="form_group">
                    <label for="address">メールアドレス</label>
                    <%= f.text_field :email, class:"form-control" %><br>
                </div>
                    <%= f.submit "編集内容を保存" %>
            </div>
                <% end %>
            <div class="confirm" >
                <%= link_to '退会する', public_confirm_path  %>
            </div>
         </div>
     </div>
 </div>
