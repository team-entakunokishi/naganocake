<h2>マイページ</h2>

<div class="update">
    <h3>登録情報</h3>
    <%= link_to '編集する', edit_public_customers_path %>
</div>

<table class="customer_info">
    <tr>
        <td>氏名</td>
        <td><%= @customer.front_name %> <%= @customer.back_name %></td>
    </tr>
    <tr>
        <td>カナ</td>
        <td><%= @customer.first_name %> <%= @customer.last_name %></td>
    </tr>
    <tr>
        <td>郵便番号</td>
        <td><%= @customer.post_code %></td>
    </tr>
    <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
    </tr>
    <tr>
        <td>電話番号</td>
        <td><%= @customer.tel_number %></td>
    </tr>
    <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
    </tr>
</table>

<div class="see_address">
    <h4>配送先</h4><%= link_to '一覧を見る', public_addresses_path %>
</div>

<div class="see_order_history">
    <h4>注文履歴</h4><%= link_to '一覧を見る', public_orders_path %>
</div>