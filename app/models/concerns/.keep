<h2>ジャンルの編集</h2>
<%= form_for @gener, url: admins_genre_path(@genre.id) do |f|
  <div class="filed row">
  <lavel>ジャンル</lavel>
  <%= f.text_field :name %>

  <%= f.submit "変更を保存する" , "btn btn btn-primary">
  </div>
  <% end %>


<h4> class-"bg-light">ジャンル一覧・追加</h4>

<%= form_with model: @genre, url: admins_genre path, local:true do |f| %>
 <%= f.label :name, "ジャンル名" %>
 <%= f.text_field :name  %>
 <%= submit '新規登録', class: "btn btn-success" %>
<% end %>

<table>
  <tr>
    <th>ジャンル</th>
    <th></th>
